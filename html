            <button class="btn" onclick="window.location.href='https://mmaxxui.github.io/hhWabHH/';">PC Check</button>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('matrix');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const letters = '0123456789ABCDEF'; // Characters to use
        const fontSize = 16;
        const columns = canvas.width / fontSize; // Number of columns based on canvas width

        // Create an array of drops, one for each column
        const drops = Array(Math.floor(columns)).fill(1);

        function drawMatrix() {
            // Set the background with opacity to create trailing effect
            ctx.fillStyle = 'rgba(0, 0, 0, 0.05)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#0f0'; // Green color
            ctx.font = `${fontSize}px monospace`;

            // Loop over drops
            drops.forEach((y, x) => {
                const text = letters.charAt(Math.floor(Math.random() * letters.length));

                ctx.fillText(text, x * fontSize, y * fontSize);

                // Randomly reset drop after it reaches the bottom of the screen
                if (y * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[x] = 0;
                }

                // Increment drop's Y position
                drops[x]++;
            });
        }

        setInterval(drawMatrix, 50); // Redraw every 50ms for smooth animation

        // Adjust canvas size when the window is resized
        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            drops.length = Math.floor(canvas.width / fontSize);
        });
    </script>
